# CaseClerk AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
APP_NAME=CaseClerk AI
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Backend
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# ==============================================
# SECURITY
# ==============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key

# ==============================================
# BASE44 PLATFORM INTEGRATION
# ==============================================
BASE44_API_URL=https://app.base44.com/api/apps/68a362a1664b8f811bac8895
BASE44_API_KEY=0fdc722fdcac4237a61e75148cf3f8b1
BASE44_APP_ID=68a362a1664b8f811bac8895

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL (if using local database)
DATABASE_URL=postgresql://caseclerk:password@localhost:5432/caseclerk_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=caseclerk_ai
DB_USER=caseclerk
DB_PASSWORD=your-database-password

# MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/caseclerk_ai

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# AI SERVICES API KEYS
# ==============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ElevenLabs (Voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ==============================================
# TELEPHONY SERVICES
# ==============================================
# Vonage (Nexmo)
VONAGE_API_KEY=your-vonage-api-key-here
VONAGE_API_SECRET=your-vonage-api-secret-here

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# FILE STORAGE
# ==============================================
# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp3,wav,mp4

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=caseclerk-ai-files

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@caseclerk.ai
FROM_NAME=CaseClerk AI

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# Health Checks
CHECK_DATABASE=true
CHECK_REDIS=true

# ==============================================
# SECURITY & CORS
# ==============================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://caseclerk.ai
ALLOWED_ORIGINS=http://localhost:3000,https://caseclerk.ai,https://www.caseclerk.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
# SSL Certificates
USE_LETSENCRYPT=false
SSL_CERT_PATH=./deployment/ssl/caseclerk.ai.crt
SSL_KEY_PATH=./deployment/ssl/caseclerk.ai.key

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
# Deployment Method (docker|pm2)
DEPLOY_METHOD=pm2

# Docker Configuration
COMPOSE_PROJECT_NAME=caseclerk-ai

# Build Configuration
BUILD_ELECTRON=false
USE_LOCAL_DB=false

# ==============================================
# MONITORING & ALERTS
# ==============================================
# Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Alerts
ALERT_EMAIL=admin@caseclerk.ai

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Hot Reload
WATCH_FILES=true

# API Documentation
ENABLE_API_DOCS=true

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_FEATURES=true
ENABLE_CALLING=true
ENABLE_RESEARCH=true
ENABLE_ANALYTICS=false
ENABLE_DESKTOP_APP=true

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/caseclerk-ai